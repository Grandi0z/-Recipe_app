<div class="card mb-3" style="max-width: 680px;">
  <div class="row g-0">
    <div class="col-md-4">
      <%=link_to user_recipe_path(@user, recipe) do%>
        <h3><%=recipe.name%></h3>
      <%end%>
      <%if can? :delete, recipe%>
        <%= 
            button_to "Remove",
            [@user, recipe],
            method: :delete,
            class:"btn btn-outline-danger"
        %>
      <%end%>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <p class="card-text">
          <%=recipe.description&.truncate(100)%>
        </p>
        <p class="card-text"><small class="text-body-secondary">Added : <%=recipe.created_at%></small></p>
      </div>
    </div>
  </div>
</div>
