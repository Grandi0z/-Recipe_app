<h1>Profil</h1>
<%# flash messages %>
<% flash.each do |type, message| %>
  <div class="alert alert-<%= type %>"><%= message %></div>
<% end %>
<%= render partial: "partials/user_profil", locals: { user: @user } %>
<div class="row justify-content-center">
  <%= link_to user_foods_path(@user), class:'col-sm-5' do %>
    <div class="card border-success mx-3 mb-3" style="max-width: 18rem;">
      <div class="card-header">Foods</div>
      <div class="card-body text-success p-0">
        <h5 class="card-title" style="text-align: center;" >Quantity : <%=@foods.length%></h5>
        <%= image_tag 'food.jpg', 
                  alt: "food", width: "100%", height: "80%", class:'img food p-0', style:'object-fit: contain;' %>
      </div>
    </div>
  <%end%>
  <%= link_to user_recipes_path(@user), class:'col-sm-5' do %>
    <div class="card border-warning mx-3 mb-3" style="max-width: 18rem;">
      <div class="card-header">Recipes</div>
      <div class="card-body p-0">
        <h5 class="card-title" style="text-align: center; color: darkgoldenrod;">
          Quantity : <%=@recipes.length%>
        </h5>
        <%= image_tag 'recipe.jpg', 
                  alt: "recipe", width: "100%", height: "80%", class:'recipe_food p-0', style:'object-fit: contain;' %>
      </div>
    </div>
  <%end%>
</div>
  <%# In case we have a error %>
  <%= render partial: "partials/errors", locals: { errors: @user.errors } %>

